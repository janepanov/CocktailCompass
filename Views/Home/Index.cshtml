@{
    ViewBag.Title = "Home Page";
}

<style>
    body {
        margin: 0;
        padding: 0;
    }

    .hero {
        position: relative;
        height: 80vh; /* 100% of the viewport height */
        background: url('https://th.bing.com/th/id/R.c1c55d6c075fab8040d14fb47040fa33?rik=Q4e%2fjWaHj8SBVg&pid=ImgRaw&r=0') center/cover no-repeat; /* Use 'cover' to fill the entire container */
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        text-align: center;
        padding: 20px;
    }

        .overlay h1 {
            font-size: 3rem;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .overlay p {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #FF4136;
        color: white;
        text-decoration: none;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        font-size: 1.25rem;
    }

        .btn:hover {
            background-color: #FF6347;
        }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CocktailCompass - Your Cocktail Recipes Companion</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="hero">
        <div class="overlay">
            <h1>Discover the World of Cocktails with CocktailCompass</h1>
            <p>Your Ultimate Guide to Crafting and Exploring Delicious Cocktails</p>
            <a href="/Cocktails/Index" class="btn">Explore Cocktail Recipes</a>
        </div>
    </div>
</body>
</html>
